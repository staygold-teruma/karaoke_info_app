<div class="my-6" id="form_wrap">
  <%= form_with model: @business_hour, local: true do |f| %>
    <div class="w-full" id="form_time_wrapper">
      <div class="sm:flex mx-auto">
        <div class="w-full sm:w-1/3 lg:w-1/6 p-3 border bg-app_bg text-lg flex sm:justify-center items-center">
          <i class="fas fa-caret-square-right text-blue-600 mr-2"></i>
          <%= f.label "平　日" %>
        </div>
        <div class="w-full sm:w-5/6 lg:flex p-3 border justify-evenly">
          <div class="w-5/6 sm:w-full mb-4 sm:mb-2 lg:mb-0 mx-auto" id="time_select_open">
            <span class="text-lg mr-2">OPEN</span>
            <%= f.time_select :weekday_start,{default:{hour: 10, minute: 0}, minute_step: 60}, class: 'form-control form_date_select' %>
          </div>
          <div class="w-5/6 sm:w-full mx-auto" id="time_select_close">
            <span class="text-lg lg:mr-2">CLOSE</span>
            <%= f.time_select :weekday_end,{default:{hour: 6, minute: 0}, minute_step: 60}, class: 'form-control form_date_select' %>
          </div>
        </div>
      </div>
      <div class="sm:flex mx-auto">
        <div class="w-full sm:w-1/3 lg:w-1/6 p-3 border bg-app_bg text-lg flex sm:justify-center items-center">
          <i class="fas fa-caret-square-right text-blue-600 mr-2"></i>
          <%= f.label "金曜日" %>
        </div>
        <div class="w-full sm:w-5/6 lg:flex p-3 border justify-evenly">
          <div class="w-5/6 sm:w-full mb-4 sm:mb-2 lg:mb-0 mx-auto" id="time_select_open">
            <span class="text-lg mr-2">OPEN</span>
            <%= f.time_select :fri_start,{default:{hour: 10, minute: 0}, minute_step: 60}, class: 'form-control form_date_select' %>
