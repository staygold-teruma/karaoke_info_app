          <div class="w-5/6 sm:w-full mb-4 sm:mb-0 mx-auto" id="time_select_open">
            <span class="text-lg mr-2">OPEN</span>
            <%= f.time_select(:weekday_start, {class:'select-date', id:"start-time", prompt:'--', time_separator: ':', minute_step: 30}, ignore_data: true, ) %>
          </div>
          <div class="w-5/6 sm:w-full mx-auto" id="time_select_close">
