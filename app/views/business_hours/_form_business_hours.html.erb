<div class="sm:border-2 rounded-lg sm:shadow my-6" id="form_wrap">
  <%= form_with model: @business_hour, local: true do |f| %>
    <div class="w-full" id="form_time_wrapper">
      <div class="sm:flex mx-auto">
        <div class="w-full sm:w-1/6 p-3 border bg-app_bg text-lg">
          <i class="fas fa-caret-square-right text-blue-600"></i>
          <%= f.label "平日" %>
        </div>
