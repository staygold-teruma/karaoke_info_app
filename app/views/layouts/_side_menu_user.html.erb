<div class="bg-black bg-opacity-70 p-4 flex items-center sm:hidden" id="side_menu_user">
  <div class="w-full mb-20">
    <div class="w-full flex justify-evenly">
      <div class="w-1/2 flex justify-center items-center">
        <div class="user_avatar_side border border-gray-400 rounded-full text-center overflow-hidden" id="img_field" >
          <% if user_signed_in? %>
            <% if current_user.avatar.blank? %>
              <%= image_tag "/assets/profile_icon.png", id: "avatar_img" %>
            <% else %>
              <%= image_tag current_user.avatar.url %>
            <% end %>
          <% else %>
            <%= image_tag "/assets/profile_icon.png", id: "avatar_img" %>
          <% end %>
        </div>
      </div>
      <div class="w-1/2 flex justify-center items-center">
        <div class="w-full">
          <div class="ml-3 mb-3">
            <% if user_signed_in? %>
              <p class="text-white mb-1">■ユーザー名</p>
              <p class="text-white"><%= current_user.name %></p>
            <% else %>
              <p class="text-white">ログインしていません</p>
            <% end %>
          </div>
          <% if user_signed_in? %>
            <div class="ml-3">
              <p class="text-white mb-1">■最終ログイン</p>
              <p class="text-white"><%= current_user.last_sign_in_at.strftime('%Y年%m月%d日') %></p>
            </div>
          <% end %>
        </div>
        </div>
    </div>
    <ul class="w-full mx-auto mt-6 p-6 bg-app_bg rounded-lg">
      <% if user_signed_in? %>
        <%= link_to(destroy_user_session_path, method: :delete, data: {confirm: "ログアウトしますか?" }) do %>
          <li class="flex justify-between border-t border-gray-500" id="user_side_list">
              <div>
                <p id="side_list_title">ログアウト</p>
              </div>
              <div>
                <i class="fas fa-chevron-right" id="side_list_icon"></i>
              </div>
          </li>
        <% end %>
        <%= link_to(edit_user_registration_path) do %>
          <li class="flex justify-between" id="user_side_list">
            <div>
              <p id="side_list_title">ユーザー編集</p>
            </div>
            <div>
              <i class="fas fa-chevron-right" id="side_list_icon"></i>
            </div>
          </li>   
        <% end %>
      <% else %>
        <%= link_to(new_user_session_path) do %>
          <li class="flex justify-between border-t border-gray-500" id="user_side_list">
            <div>
              <p id="side_list_title">ログイン</p>
            </div>
            <div>
              <i class="fas fa-chevron-right" id="side_list_icon"></i>
            </div>
          </li>
        <% end %>
        <%= link_to(new_user_registration_path) do %>
          <li class="flex justify-between" id="user_side_list">
            <div>
              <p class="text-app font-bold" id="side_list_title">ユーザー登録</p>
            </div>
            <div>
              <i class="fas fa-chevron-right" id="side_list_icon"></i>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
