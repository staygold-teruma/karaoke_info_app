<div class="hidden sm:flex justify-between items-center bg-app_bg" id="top_nav_user">
  <div>
    <%= link_to root_path do %>
      <img src="/assets/logo.png" alt="">
    <% end %>
  </div>
  <ul class="flex">
    <li class="px-2 lg:px-4 sm:text-xs hover:underline flex items-center flex items-center">
      <%= link_to "ホーム", root_path %>
    </li>
    <li class="border-l-2 border-gray-200 px-2 lg:px-4 sm:text-xs hover:underline flex items-center">
      <%= link_to "トピックス", users_topics_path %>
    </li>
    <li class="border-l-2 border-gray-200 px-2 lg:px-4 sm:text-xs hover:underline flex items-center">
      <%= link_to "クーポン", static_pages_coupon_path %>
    </li>
    <li class="border-l-2 border-gray-200 px-2 lg:px-4 sm:text-xs hover:underline flex items-center">
      <%= link_to "料金表", static_pages_fee_table_path %>
    </li>
    <li class="border-l-2 border-gray-200 px-2 lg:px-4 sm:text-xs hover:underline flex items-center">
      <%= link_to "飲み放題", static_pages_alcohol_plan_path %>
    </li>
    <% if user_signed_in? %>
      <li class="border-l-2 border-gray-200 px-2 lg:px-4 sm:text-xs hover:underline flex items-center">
        <%= link_to "マイページ", user_path(current_user.id) %>
      </li>
      <li class="border-l-2 border-gray-200 px-2 lg:px-4 sm:text-xs hover:underline flex items-center">
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete, data: {confirm: "ログアウトしますか?" } %>
      </li>
    <% else %>
      <li class="border-l-2 border-gray-200 px-2 lg:px-4 sm:text-xs hover:underline flex items-center">
        <%= link_to "ログイン", new_user_session_path %>
      </li>
      <li class="border-l-2 border-gray-200 px-2 lg:px-4 sm:text-xs hover:underline flex items-center">
        <%= link_to "【ユーザー登録】", new_user_registration_path %>
      </li>
    <% end %>
    <li class="border-l-2 px-2 lg:px-4 border-gray-200 hidden sm:block">
      <%= link_to shops_path do %>
        <div>
          <button class="bg-black bg-opacity-70 rounded-full text-xs text-white border-2 border-app px-3 py-1">
            <i class="fas fa-search mr-2 text-white"></i>店舗検索
          </button>
        </div>
      <% end %>
    </li>
  </ul>
</div>
<div class="bg-top-image bg-cover bg-no-repeat bg-center" id="header_user">
  <%= link_to root_path do %>
    <div class="w-1/2 xl:w-2/5 pr-4 md:pr-0" id="app_title_user">
      <div class="md:mr-20 xl:mr-12">
        <h1 class="text-white text-center text-xs md:text-base lg:text-lg mb-1">カラオケ料金案内アプリ</h1>
        <p class="text-app text-center text-4xl sm:text-4xl md:text-5xl lg:text-6xl">iko!KARA</p>
      </div>
    </div>
  <% end %>
  <div class="menu_open_btn sm:hidden shadow" id="open_btn">
    <span></span>
    <span></span>
    <span></span>
  </div>
</div>
