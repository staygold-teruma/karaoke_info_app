<nav class="flex justify-between md:justify-start items-center w-full" id="gnav">
  <%= link_to root_path, class: "hidden md:block" do %>
    <img src="/assets/logo.png" class="hidden md:block" id="logo_md">
  <% end %>
  <div class="" id="nav_main">
    <div class="md:flex items-center border-b border-gray-300 mr-2" id="account">
      <div class="h-full flex items-center md:mx-5">
        <img src="/assets/logo.png" class="mr-2 md:hidden" id="logo_sm">
        <% if current_shop.name.present?%>
          <p class="text-xxs">
            <span class="text-xxs md:text-sm text-blue-500 font-bold"><%= current_shop.name %></span>さんの管理ページ
          </p> 
        <% else %> 
          <p class="text-xxs">
            <span class="text-sm text-blue-500 font-bold"><%= current_shop.email %></span>
            <br class="md:hidden">
            さんの管理ページ
          </p>    
        <% end %>
      </div>
      <div class="flex items-center ml-2 md:ml-0" id="nav_btn_box">
        <div class="flex">
          <div class="mt-1 md:mt-0 mr-3 md:mr-2">
            <%= link_to "店舗情報編集", edit_shop_registration_path, class: "nav_btn_edit text-xxs px-2" %>
          </div>
          <div class="mt-1 md:mt-0 mr-3 md:mr-2">
            <%= link_to "ログアウト", destroy_shop_session_path, method: :delete, data: {confirm: "ログアウトしますか?" }, class: "nav_btn_sign_out text-xxs px-4" %>
          </div>
        </div>
      </div>
    </div>
    <div class="hidden md:flex">
      <%= render "layouts/flash" %>
    </div>
  </div>
  <div class="md:hidden shadow mr-4" id="open_btn">
    <span></span>
    <span></span>
    <span></span>
  </div>
</nav>


