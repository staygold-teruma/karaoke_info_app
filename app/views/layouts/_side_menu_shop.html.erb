<ul class="w-full px-3 md:px-0 sm:pt-8 md:pt-0">
  <li class="mt-3 mx-3 pt-1 pb-1 text-xl text-center text-white bg-black bg-opacity-80 hidden md:block">MENU</li>
  <li class="sm:mx-8 md:mx-3 pt-5 pb-3 pl-5 md:border-b border-gray-300 hidden md:block hover:text-app">
    <%= link_to(root_path) do %>
      <i class="fas fa-home text-app mr-2 text-lg"></i>HOME
    <% end %>
  </li>
  <li class="side_li_title sm:hidden mb-3">
    <i class="fas fa-user-tie text-app mr-2 text-center md:text-left"></i>アカウント<i class="fas fa-chevron-down ml-2 text-white md:text-gray-600"></i>
    <ul class="flex md:block sm:mt-2 md:mt-0 md:pl-2">
      <li class="side_li_menu w-1/2 md:w-full md:pt-4 md:pb-2 border-r-0 rounded-l-lg">
        <%= link_to(destroy_shop_session_path, method: :delete, data: {confirm: "ログアウトしますか?" }) do %>
          <i class="fas fa-list-alt text-app mr-1 ml-1 hidden md:block"></i>ログアウト
        <% end %>
      </li>
      <li class="side_li_menu w-1/2 md:w-full text-center md:text-left md:pt-2 md:pb-2 rounded-r-lg">
        <%= link_to(edit_shop_registration_path) do %>
          <i class="fas fa-folder-plus text-app mr-1 ml-1 hidden md:block"></i>店舗情報編集
        <% end %>      
      </li>
    </ul>
  </li>
  <li class="side_li_title sm:mx-8 md:mx-3 md:py-3 md:pl-5 mb-3 md:mb-0">
    <i class="fas fa-couch text-app mr-2 text-center md:text-left"></i>ルーム料金<i class="fas fa-chevron-down ml-2 text-white md:text-gray-600"></i>
    <ul class="flex md:block sm:mt-2 md:mt-0 md:pl-2">
      <li class="side_li_menu w-1/2 md:w-full md:pt-4 md:pb-2 border-r-0 rounded-l-lg">
        <%= link_to(main_plans_path) do %>
          <i class="fas fa-list-alt text-app mr-1 ml-1 hidden md:block"></i>ルーム料金一覧
        <% end %>
      </li>
      <li class="side_li_menu w-1/2 md:w-full text-center md:text-left md:pt-2 md:pb-2 rounded-r-lg">
        <%= link_to(new_main_plan_path) do %>
          <i class="fas fa-folder-plus text-app mr-1 ml-1 hidden md:block"></i>ルーム料金登録
        <% end %>      
      </li>
    </ul>
  </li>
  <li class="side_li_title sm:mx-8 md:mx-3 md:py-3 md:pl-5 mb-3 md:mb-0">
    <i class="fas fa-coffee text-app mr-1"></i>ドリンク料金<i class="fas fa-chevron-down ml-2 text-white md:text-gray-600"></i>
    <ul class="flex md:block sm:mt-2 md:mt-0 md:pl-2">
      <li class="side_li_menu w-1/2 md:w-full md:pt-4 md:pb-2 border-r-0 rounded-l-lg">
        <%= link_to(drink_plans_path) do %>
          <i class="fas fa-list-alt text-app mr-1 ml-1 hidden md:block"></i>ドリンク料金一覧
        <% end %>      
      </li>
      <li class="side_li_menu w-1/2 md:w-full text-center md:text-left md:pt-2 md:pb-2 rounded-r-lg">
        <%= link_to(new_drink_plan_path) do %>
          <i class="fas fa-folder-plus text-app mr-1 ml-1 hidden md:block"></i>ドリンク料金登録
        <% end %>      
      </li>
    </ul>
  </li>
  <li class="side_li_title sm:mx-8 md:mx-3 md:py-3 md:pl-5 mb-3 md:mb-0">
    <i class="fas fa-info-circle text-app mr-2 text-lg"></i>TOPICS<i class="fas fa-chevron-down ml-2 text-white md:text-gray-600"></i>
    <ul class="flex md:block sm:mt-2 md:mt-0 md:pl-2">
      <li class="side_li_menu w-1/2 md:w-full md:pt-4 md:pb-2 border-r-0 rounded-l-lg">
        <%= link_to(shops_topics_path) do %>
          <i class="fas fa-list-alt text-app mr-1 ml-1 hidden md:block"></i>TOPICS一覧
        <% end %>
      </li>
      <li class="side_li_menu w-1/2 md:w-full md:pt-2 md:pb-2 rounded-r-lg">
        <%= link_to(new_shops_topic_path) do %>
          <i class="fas fa-folder-plus text-app mr-1 ml-1 hidden md:block"></i>TOPICS投稿
        <% end %>
      </li>
    </ul>
  </li>
  <li class="side_li_title sm:mx-8 md:mx-3 md:py-5 md:pl-5 sm:mb-3 md:mb-0 md:hover:text-app">
    <%= link_to(fee_guides_path) do %>
      <i class="fas fa-list-alt text-app mr-2"></i>案内履歴
    <% end %>  
    <ul class="sm:mt-2 md:mt-0 md:pl-2">
      <li class="side_li_menu w-1/2 md:w-full md:pt-4 md:pb-2 md:hidden rounded-lg">
        <%= link_to(fee_guides_path) do %>
          <i class="fas fa-list-alt text-app mr-1 ml-1 hidden md:block"></i>案内履歴
        <% end %>      
      </li>
    </ul>
  </li>
</ul>
