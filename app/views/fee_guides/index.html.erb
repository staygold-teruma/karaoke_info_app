<% content_for :title do %>
  管理画面：利用分析
<% end %>
<% content_for :header do %>
  <div class="fixed w-full z-50">
    <%= render "layouts/header_shop" %>
  </div>
<% end %>
<% content_for :footer do %>
  <%= render "layouts/footer_shop" %>
<% end %>
<div class="flex">
  <div class="flex items-center md:items-start bg-black bg-opacity-80 md:bg-app_bg" id="side_menu_shop">
    <%= render "layouts/side_menu_shop" %>
  </div>
  <div class="px-3 lg:px-12" id="main_contents_shop">
    <h1 class="page_title_shop">【利用分析】</h1>
    <h3 class="mt-6 sm:mt-12 text-lg pl-3 sm:pl-4"><i class="fas fa-chevron-circle-right text-app mr-1" id="news_i"></i>案内履歴</h3>
    <div class="h-64 sm:h-80 border border-gray-400 bg-white rounded-lg shadow overflow-x-auto overflow-y-auto relative mx-2 sm:mx-4 md:my-4 items-center">
      <table class="border-collapse table-auto w-full whitespace-no-wrap bg-white table-striped relative" id="table_index">
        <thead>
          <tr id="table_heading" class="bg-blue-500 sticky top-0">
            <th class="index_table_head text-xxs sm:text-sm hidden md:table-cell">No.</th>
            <th class="index_table_head text-xxs sm:text-sm">案内日</th>
            <th class="index_table_head text-xxs sm:text-sm">料金合計</th>
            <th class="index_table_head text-xxs sm:text-sm hidden md:table-cell">会員</th>
            <th class="index_table_head text-xxs sm:text-sm">利用人数</th>
            <th class="index_table_head text-xxs sm:text-sm hidden md:table-cell">一般</th>
            <th class="index_table_head text-xxs sm:text-sm hidden md:table-cell">学生</th>
            <th class="index_table_head text-xxs sm:text-sm hidden md:table-cell">シニア</th>
            <th class="index_table_head text-xxs sm:text-sm hidden md:table-cell">小学生</th>
            <th class="index_table_head text-xxs sm:text-sm">利用時間</th>
            <th class="index_table_head text-xxs sm:text-sm">ドリンクプラン</th>
            <th class="border border-gray-400 px-2 py-3 hidden md:table-cell"><i class="fas fa-edit text-white"></i></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "fee_guide", collection: @fee_guides %>
        </tbody>
      </table>
    </div>
    <%= render "fee_guide_data", { fee_guides: @fee_guides, not_member_month: @not_member_month, member_ratio_data: @member_ratio_data, customer_base_data: @customer_base_data } %>
  </div>
</div>
