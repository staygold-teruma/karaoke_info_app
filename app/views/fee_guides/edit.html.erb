<% content_for :title do %>
  料金案内結果
<% end %>
<% content_for :header do %>
  <% if shop_signed_in? %>
    <div class="fixed w-full top-0 left-0 z-10">
      <%= render "layouts/header_shop" %>
    </div>
  <% else %>
    <div class="fixed w-full top-0 left-0 z-10">
      <%= render "layouts/header_user" %>
    </div>
  <% end %>
<% end %>
<% content_for :footer do %>
  <% if shop_signed_in? %>
    <div class="fixed w-full md:hidden">
      <%= render "layouts/footer_shop" %>
    </div>
  <% else %>
    <%= render "layouts/footer_user" %>
  <% end %>
<% end %>
<% if shop_signed_in? %>
  <div id="margin_wrapper_shop"></div>
<% else %>
  <div id="margin_wrapper"></div>
  <% breadcrumb :fee_guide_result %>
  <%= breadcrumbs separator: " &rsaquo; " %>
<% end %>
<% if shop_signed_in? %>
  <div class="flex">
    <div class="flex items-center md:items-start bg-black bg-opacity-80 md:bg-app_bg" id="side_menu_shop">
      <%= render "layouts/side_menu_shop" %>
    </div>
    <div id="result_fee_guide_shop">
      <%= render "result_fee_guide" %>
    </div>
  </div>
<% else %>
  <%= render "layouts/side_menu_user" %>
  <%= render "result_fee_guide" %>
<% end %>
<div class="mt-6 mx-1 sm:mx-0 px-0 sm:px-7 pb-24 sm:pb-12">
  <div class="sm:max-w-screen-md xl:max-w-none sm:mx-auto sm:px-0 sm:mt-12">
    <h3 class="text-lg mt-8 mb-4 sm:mb-2 xl:my-12 ml-2 sm:ml-0 font-black xl:text-center xl:bg-app xl:text-white xl:py-4 xl:rounded-lg xl:text-2xl"><i class="fas fa-play-circle text-app xl:text-white mr-1"></i>条件を変えてやり直す</h3>
  </div>
  <div class="w-11/12 lg:w-2/3 bg-white mx-auto rounded shadow sm:py-12 sm:pt-6 border-2  border-app">
    <%= render 'form_fee_guide', path: fee_guides_path, method: :post, time_table: @time_table %>
  </div>
</div>
<div class="">
  <div class="bg-gray-600 flex justify-center items-center rounded-lg" id="page_top">
    <a href="#">
      <div id="triangle"></div>
      <p class="text-white text-center">TOP</p>
    </a>
  </div>
</div>
