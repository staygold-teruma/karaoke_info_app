<div class="block lg:flex justify-center lg:justify-evenly items-center py-4 md:py-6 xl:py-0" id="news_wrapper_shop">
  <div class="mx-auto lg:mx-0" id="news_left">
    <div class="hidden sm:block mt-1 bg-gray-100 rounded-lg shadow-lg mb-2 p-3 pt-2" id="news_box">
      <div class="w-full rounded text-center bg-app text-white my-2 items-center sm:text-xl">
        NEW!
      </div>
      <% @topics_five.each do |shops_topic| %>
        <%= link_to(shops_topic_path(shops_topic)) do %>
          <div class="mb-1 bg-gray-100 mx-auto" id="each_news">
            <div class="flex">
              <i class="fas fa-chevron-circle-right text-app mr-1" id="news_i"></i>
              <div class="text-xs sm:text-base" id="news_day">
                <%= shops_topic.created_at.strftime('%m月%d日') %>
              </div>
              <div class="text-xs sm:text-base" id="news_title">
                <%= shops_topic.title %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <%= link_to shops_path do %>
      <div class="w-full flex justify-center mb-3 sm:hidden">
        <button class="bg-black bg-opacity-70 rounded-full text-lg text-white border-2 border-app px-12 py-1 mt-2 mb-2">
          <i class="fas fa-search mr-2 text-white"></i>店舗検索
        </button>
      </div>
    <% end %>
    <div class="sm:hidden bg-gray-100 rounded-lg shadow-lg mx-auto mt-3 mb-3 sm:mb-0 p-3" id="news_box">
      <div class="w-full rounded text-center bg-app text-white px-1 mb-4 items-center text-xl">
        NEW!
      </div>
      <div class="mx-auto">
        <% @topics_three.each do |shops_topic| %>
          <%= link_to(shops_topic_path(shops_topic)) do %>
            <div class="mb-2 bg-gray-100 mx-auto" id="each_news">
              <div class="flex">
                <i class="fas fa-chevron-circle-right text-app mr-1"></i>
                <div id="news_day">
                  <%= shops_topic.created_at.strftime('%m月%d日') %>
                </div>
                <div id="news_title">
                  <%= shops_topic.title %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="hidden sm:block mt-2">
      <%= link_to "※TOPICS一覧はこちら", shops_topics_path, class: "hover:text-app ml-2" %>
    </div>
  </div>
  <div class="mt-6 lg:-mt-6 sm:px-6">
    <ul class="mx-auto w-11/12 md:w-full grid grid-cols-2 md:grid-cols-4 gap-6 sm:gap-2">
      <li class="h-16 border-2 border-app rounded flex justify-center items-center text-xs px-3 mt-4 sm:mt-2 bg-gray-100">
        <%= link_to "ルーム料金一覧", main_plans_path %>
      </li>
      <li class="w-30 h-16 border-2 border-app rounded flex justify-center items-center text-xs px-3 mt-4 sm:mt-2 bg-gray-100">
        <%= link_to "ルーム料金登録", new_main_plan_path, id: "dd_menu_last" %>
      </li>
      <li class="w-30 h-16 border-2 border-app rounded flex justify-center items-center text-xs px-3 mt-4 sm:mt-2 bg-gray-100">
        <%= link_to "ドリンク料金一覧", drink_plans_path %>
      </li>
      <li class="w-30 h-16 border-2 border-app rounded flex justify-center items-center text-xs px-3 mt-4 sm:mt-2 bg-gray-100">
        <%= link_to "ドリンク料金登録", new_drink_plan_path, id: "dd_menu_last" %>
      </li>
      <li class="w-30 h-16 border-2 border-app rounded flex justify-center items-center text-xs px-3 mt-4 sm:mt-2 bg-gray-100">
        <%= link_to "TOPICS一覧", shops_topics_path %>
      </li>
      <li class="w-30 h-16 border-2 border-app rounded flex justify-center items-center text-xs px-3 mt-4 sm:mt-2 bg-gray-100">
        <%= link_to "TOPICS投稿", new_shops_topic_path, id: "dd_menu_last" %>
      </li>
      <li class="w-30 h-16 border-2 border-app rounded flex justify-center items-center text-xs px-3 mt-4 sm:mt-2 bg-gray-100">
        <%= link_to "利用分析", fee_guides_path, id: "dd_menu_last" %>
      </li>
    </ul>
  </div>
</div>
