<% content_for :title do %>
  料金案内TOP
<% end %>
<% content_for :header do %>
  <% if shop_signed_in? %>
    <%= render "guide_top_shop" %>
  <% else %>
    <%= render "guide_top_user" %>
  <% end %>
<% end %>
<div id="app_guide_wrapper">
  <% if shop_signed_in? %>
    <%= render "contents_top_shop" %>
  <% else %>
    <%= render "contents_top_user" %>
  <% end %>
</div>
<div id="modal" class="mx-auto bg-black bg-opacity-80 transform scale-0 transition-transform duration-300 sm:pt-4 pb-12">
  <div class="w-11/12 lg:w-2/3 bg-white mx-auto rounded shadow sm:py-12 sm:pt-6">
    <%= render 'form_fee_guide', path: fee_guides_path, method: :post %>
  </div>
  <%= render 'q_and_a' %>
</div>
<div class="flex items-center sm:hidden bg-gray-600" id="guide_footer">
  <div class="flex items-center justify-evenly" id="footer_btn_left">
    <% if shop_signed_in? %>
      <%= link_to fee_guides_path do %>
        <div class="text-center pt-3" id="btn_box">
          <i class="fas fa-chart-pie text-2xl text-app"></i>
          <p class="text-center text-xxs text-white">利用分析</p>
        </div>
      <% end %>
    <% else %>
      <%= link_to users_topics_path do %>
        <div class="text-center pt-3" id="btn_box">
          <i class="fas fa-info-circle text-2xl text-app"></i>
          <p class="text-center text-xxs text-white">トピックス</p>
        </div>
      <% end %>
    <% end %>
    <% if shop_signed_in? %>
      <%= link_to shops_topics_path do %>
        <div class="text-center pt-3" id="btn_box">
          <i class="fas fa-info-circle text-2xl text-app"></i>
          <p class="text-center text-xxs text-white">トピックス</p>
        </div>
      <% end %>
    <% else %>
      <%= link_to static_pages_coupon_path do %>
        <div class="text-center pt-3" id="btn_box">
          <i class="fas fa-ticket-alt text-2xl text-app"></i>
          <p class="text-center text-xxs text-white">クーポン</p>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="flex items-center justify-evenly" id="footer_btn_right">
    <% if shop_signed_in? %>
      <%= link_to main_plans_path do %>
        <div class="text-center pt-3" id="btn_box">
          <i class="fas fa-couch text-2xl text-app"></i>
          <p class="text-center text-xxs text-white">ルーム料金</p>
        </div>
      <% end %>
    <% else %>
      <%= link_to static_pages_fee_table_path do %>
        <div class="text-center pt-3" id="btn_box">
          <i class="fas fa-book-open text-app text-2xl"></i>
          <p class="text-center text-xxs text-white">料金表</p>
        </div>
      <% end %>
    <% end %>
    <div class="pt-1" id="btn_box">
      <% if shop_signed_in? %>
        <%= link_to main_plans_path do %>
          <div class="text-center pt-2" id="btn_box">
            <i class="fas fa-coffee text-2xl text-app"></i>
            <p class="text-center text-xxs text-white">ドリンク料金</p>
          </div>
        <% end %>
      <% else %>
        <%= link_to static_pages_alcohol_plan_path do %>
          <div class="text-center pt-2" id="btn_box">
            <i class="fas fa-beer text-app text-2xl"></i>
            <p class="text-center text-xxs text-white">飲み放題</p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<button id="modal_btn_footer" class="focus:outline-none p-2 pb-4 bg-gray-800 rounded-full ring-8 ring-app sm:hidden" type="button">
  <span class="text-xs text-white">料金案内</span>
  <br>
  <span class="text-xl text-white">START!</span>
</button>
<% if shop_signed_in? %>
  <div class="flex items-center sm:hidden bg-black bg-opacity-80 md pb-24" id="side_menu_shop_f">
    <%= render "layouts/side_menu_shop" %>
  </div>
<% else %>
  <%= render "layouts/side_menu_user" %>
<% end %>
<button id="close_btn" type="button" class="focus:outline-none hidden bg-gray-600 rounded text-center">
  <i class="far fa-times-circle text-app text-2xl"></i>
  <p class="text-white text-xs">閉じる</p>
</button>
