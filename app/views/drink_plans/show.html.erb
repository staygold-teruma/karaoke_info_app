<%= render "layouts/header_plans" %>
<h1 class="page_title">ルーム料金詳細</h1>
<div id="show_wrapper">
  <div id="plan_title">
    <p>【<%= @drink_plan.name %>】</p>
  </div>
  <table class="table table-bordered table-sm" id="plan_div_table">
    <thead>
      <tr id="table_heading">
        <th scope="col">単位</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td style="width: 60px"><%= @drink_plan.time_unit_i18n %></td>
      </tr>
    </tbody>
  </table>
  <table class="table table-bordered" id="plan_fee_table">
    <thead>
      <tr id="table_heading" class="bg-primary">
        <th scope="col">一般料金</th>
        <th scope="col">学生料金</th>
        <th scope="col">シニア料金</th>
        <th scope="col">小学生料金</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @drink_plan.adult_fee %>円</td>
        <td><%= @drink_plan.student_fee %>円</td>
        <td><%= @drink_plan.senior_fee %>円</td>
        <td><%= @drink_plan.child_fee %>円</td>
      </tr>
    </tbody>
  </table>
  <div id="plan_note">
    <h2 id="note_title">備考:</h2>
    <%= simple_format(@drink_plan.note) %>
  </div>
  <div class="link_btn">
    <%= link_to "編集", edit_drink_plan_path(@drink_plan), class: "btn btn-primary" %>
    <%= link_to "削除", drink_plan_path(@drink_plan), method: :delete, data: { confirm: "このプランを削除しますか?" }, class: "btn btn-danger" %>
  </div>
</div>
