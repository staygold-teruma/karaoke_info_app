<%= render "layouts/header_plans" %>
<h1 class="page_title">ドリンクコース一覧</h1>
<div id="d_search_box">
  <%= search_form_for @q do |f| %>
    <%= f.label :name_cont, "料金名称:", class: 'first_label'%>
    <%= f.search_field :name_cont %>
    <%= f.label :time_unit_eq, "単位:" %>
    <%= f.select :time_unit_eq, DrinkPlan.time_units.map{|k, v| [DrinkPlan.time_units_i18n[k], v]}, include_blank: true %>
    <%= f.submit "検索", class: "btn btn-primary btn-sm"  %>
  <% end %>
</div>
<div class='text-nowrap table-responsive' id="table_wrap">
  <table class="table table-bordered table-hover table-fixed" id="index_plan_table">
    <thead>
      <tr id="table_heading" class="bg-primary">
        <th scope="col">No.</th>
        <th scope="col">料金名称</th>
        <th scope="col">単位</th>
        <th scope="col">一般</th>
        <th scope="col">学生</th>
        <th scope="col">シニア</th>
        <th scope="col">小学生</th>
        <th scope="col" colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @drink_plans.each.with_index(1) do |drink_plan, i| %>
        <tr>
          <td><%= i %></td>
          <td><%= link_to drink_plan.name, drink_plan %></td>
          <td><%= drink_plan.time_unit_i18n %></td>
          <td><%= drink_plan.adult_fee %>円</td>
          <td><%= drink_plan.student_fee %>円</td>
          <td><%= drink_plan.senior_fee %>円</td>
          <td><%= drink_plan.child_fee %>円</td>
          <td><%= link_to "編集", edit_drink_plan_path(drink_plan) %></td>
          <td><%= link_to "削除", drink_plan, method: :delete, data: { confirm: "このプランを削除しますか?" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
