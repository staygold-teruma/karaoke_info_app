<% content_for :title do %>
    管理画面：パスワード再設定
<% end %>
<% content_for :header do %>
  <div class="fixed w-full">
    <%= render "layouts/header_shop" %>
  </div> 
<% end %>
<% content_for :footer do %>
  <%= render "layouts/footer_shop" %>
<% end %>

<div class="flex">
  <div class="flex items-center md:items-start bg-black bg-opacity-80 md:bg-app_bg" id="side_menu_shop">
    <%= render "layouts/side_menu_shop" %>
  </div>
  <div id="main_contents_shop">
    <h1 class="page_title">パスワード再設定</h1>
    <div class="border-2 border-app rounded-xl shadow-lg w-11/12 sm:w-5/6 mx-auto py-9 max-w-3xl mb-6">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "shops/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field mb-3 w-5/6 sm:w-2/3 mx-auto">
          <div class="sm:flex items-end">
          <%= f.label :password, "新しいパスワード", class: "text-sm ml-2" %>
          <% if @minimum_password_length %>
            <em class="text-xs text-gray-400 not-italic">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "border border-gray-400 rounded-lg ml-2 px-2 py-2 text-sm w-11/12" %>
        </div>

        <div class="field mb-3 w-5/6 sm:w-2/3 mx-auto">
          <%= f.label :password_confirmation, "パスワード確認", class: "text-sm ml-2"  %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border border-gray-400 rounded-lg ml-2 px-2 py-2 text-sm w-11/12" %>
        </div>

        <div class="actions flex justify-evenly mt-6 mx-auto">
          <%= f.submit "変更", class: "w-1/4 text-center text-white bg-green-500 hover:bg-green-700 py-2 rounded cursor-pointer" %>
        </div>
      <% end %>

      <%= render "shops/shared/links" %>
    </div>
  </div>
</div>
