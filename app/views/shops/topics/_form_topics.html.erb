<%= form_with model: [:shops,@shops_topic], local: true do |f| %>
  <div class="w-5/6 mx-auto sm:border-2 rounded-lg sm:shadow my-6 p-1 sm:p-5" id="topics_form_wrapper">
    <div class="w-full mb-2 sm:mb-5 ml-1 sm:ml-3">
      <i class="fas fa-caret-square-right text-blue-600"></i>
      <%= f.label :title, "タイトル", class: "mr-2 text-sm" %>
      <%= f.text_field :title, class: "block border border-gray-400 rounded-lg w-full sm:w-11/12 h-8 text-xs px-3 mt-1" %>
    </div>
    <div class="w-full mb-2 sm:mb-5 ml-1 sm:ml-3">
      <i class="fas fa-caret-square-right text-blue-600"></i>
      <%= f.label :content, "内容", class: "mr-2 text-sm" %>
      <%= f.text_area :content, class: "block border border-gray-400 rounded-lg w-full sm:w-11/12 h-20 text-xs px-2 py-1 mt-1" %>
    </div>
    <p><%= f.file_field :image %></p>
    <div>
      <%= f.submit "投稿", class: "btn_form_create w-full" %>
    </div>
  </div>
<% end %>
