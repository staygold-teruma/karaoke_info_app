<% content_for :title do %>
    管理画面：TOPICS登録
<% end %>
<% content_for :header do %>
  <div class="fixed w-full top-0 left-0 z-10">
    <%= render "layouts/header_shop" %>
  </div>   
<% end %>
<% content_for :footer do %>
  <div class="fixed w-full bottom-0 left-0 md:hidden">
    <%= render "layouts/footer_shop" %>
  </div>
<% end %>

<div class="flex">
  <div class="flex items-center md:items-start bg-black bg-opacity-80 md:bg-app_bg" id="side_menu_shop">
    <%= render "layouts/side_menu_shop" %>
  </div>
  <div id="main_contents_shop">
    <div class="md:hidden">
      <%= render "layouts/flash" %>
    </div>
    <h1 class="page_title">店舗TOPICS登録</h1>
    <%= render "form_topics" %>
  </div>
</div>
