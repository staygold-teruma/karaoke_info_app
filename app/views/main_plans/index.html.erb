<h1 class="page_title">設定料金一覧</h1>
<table class="table table-bordered" id="plan_table">
  <thead>
    <tr id="table_heading">
      <th scope="col"><%= sort_order "id", "ID" %></th>
      <th scope="col">プラン名</th>
      <th scope="col">会員</th>
      <th scope="col">曜日</th>
      <th scope="col">時間</th>
      <th scope="col">単位</th>
      <th scope="col">一般</th>
      <th scope="col">学生</th>
      <th scope="col">シニア</th>
      <th scope="col">小学生</th>
    </tr>
  </thead>
  <tbody>
    <% @main_plans.each do |main_plan| %>
      <tr>
        <td><%= main_plan.id %></td>
        <td><%= link_to main_plan.name, main_plan %></td>
        <td><%= main_plan.div_member_i18n %></td>
        <td><%= main_plan.div_day_i18n %></td>
        <td><%= main_plan.div_time_i18n %></td>
        <td><%= main_plan.time_unit_i18n %></td>
        <td><%= main_plan.adult_fee %>円</td>
        <td><%= main_plan.student_fee %>円</td>
        <td><%= main_plan.senior_fee %>円</td>
        <td><%= main_plan.child_fee %>円</td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="link_box">
  <%= link_to "新規登録", new_main_plan_path %>
</div>
