<% content_for :title do %>
    TOPICS詳細
<% end %>
<% content_for :header do %>
  <% if shop_signed_in? %>
    <div class="fixed w-full">
      <%= render "layouts/header_shop" %>
    </div> 
  <% else %>
    <div class="fixed w-full">
      <%= render "layouts/header_user" %>      
    </div>
  <% end %>  
<% end %>
<% content_for :footer do %>
  <%= render "layouts/footer_shop" %>
<% end %>

<div class="flex">
  <div class="flex items-center md:items-start bg-black bg-opacity-80 md:bg-app_bg" id="side_menu_shop">
    <%= render "layouts/side_menu_shop" %>
  </div>
  <div id="main_contents_shop">
    <h1 class="page_title">TOPICS</h1>
    <div class="border border-gray-200 mx-auto rounded-xl" id="topic_show">
      <div class="w-1/2 bg-app-light rounded-full text-center font-semibold text-white px-2 py-2 mx-auto my-4" >
        <%= @topic.created_at.strftime('%Y年%m月%d日') %>
      </div>
      <div class="w-full text-center font-bold text-lg overflow-hidden mb-3" id="topics_title">
        【<%= @topic.title %>】
      </div>
      <div class="flex justify-center items-center mx-auto" id="topics_img_box">
        <%= image_tag @topic.image.url %>
      </div>
      <div class="w-11/12 mx-auto my-3 p-3 bg-gray-100 border border-gray-200 rounded-lg text-sm" id="topics_content">
        <%= simple_format(h(@topic.content))%>
      </div>
    </div>
  </div>
</div>
