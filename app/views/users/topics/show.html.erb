<% content_for :title do %>
  TOPICS詳細
<% end %>
<% content_for :header do %>
  <div class="fixed w-full top-0 left-0 z-10">
    <%= render "layouts/header_user" %>
  </div>
<% end %>
<% content_for :footer do %>
  <%= render "layouts/footer_user" %>
<% end %>
<div id="margin_wrapper"></div>
<% breadcrumb :topic_show %>
<%= breadcrumbs separator: " &rsaquo; " %>
<div class="mx-auto" id="main_contents_user">
  <div class="w-11/12 border border-gray-200 mx-auto rounded-xl mt-3 sm:mt-6 pb-3" id="topic_show">
    <div class="text-center mt-3 my-2 text-sm">
      <%= @users_topic.created_at.strftime('%Y年%m月%d日') %>
    </div>
    <div class="w-11/12 bg-app-light rounded-full text-center font-semibold text-white px-2 py-2 mx-auto" >
      <%= @users_topic.shop.name %>
    </div>
    <div class="w-11/12 text-center font-bold text-sm md:text-lg overflow-hidden mx-auto mt-3" id="topics_title">
      【<%= @users_topic.title %>】
    </div>
    <div class="px-3">
      <div class="flex justify-center items-center mx-auto mt-6" id="topics_img_box">
        <%= image_tag @users_topic.image.url %>
      </div>
      <div class="w-11/12 mx-auto my-6 p-3 bg-gray-100 border border-gray-200 rounded-lg text-sm" id="topics_content">
        <%= simple_format(h(@users_topic.content))%>
      </div>
    </div>
  </div>
</div>
<%= render "layouts/side_menu_user" %>
