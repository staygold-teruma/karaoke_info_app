<% content_for :title do %>
  TOPICS一覧
<% end %>
<% content_for :header do %>
  <div class="fixed w-full top-0 left-0 z-10">
    <%= render "layouts/header_user" %>
  </div>
<% end %>
<% content_for :footer do %>
  <%= render "layouts/footer_user" %>
<% end %>
<div id="margin_wrapper"></div>
<% breadcrumb :topic_index %>
<%= breadcrumbs separator: " &rsaquo; " %>
<div id="main_contents_user">
  <h1 class="page_title mb-6">TOPICS一覧</h1>
  <div class="mx-auto mt-2 px-5 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-1" id="topics_wrapper">
    <%= render partial: "topic_user", collection: @users_topics  %>
  </div>
  <div class="text-center mt-6">
    <%= paginate @users_topics %>
  </div>
</div>
<%= render "layouts/side_menu_user" %>
