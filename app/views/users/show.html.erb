<% content_for :title do %>
    マイページ
<% end %>
<% content_for :header do %>
  <div class="fixed w-full top-0 left-0 z-10">
    <%= render "layouts/header_user" %>      
  </div>
<% end %>
<% content_for :footer do %>
  <%= render "layouts/footer_user" %>
<% end %>

<div id="margin_wrapper"></div>
<div class="pb-20" id="sign_wrapper">
  <div class="sm:border-2 border-app rounded-xl sm:shadow-lg sm:w-5/6 mx-auto pb-5 sm:py-4 max-w-3xl sm:mb-6">
      <div class="flex justify-center mx-auto">
        <div class="user_avatar_show border border-gray-400 rounded-full text-center overflow-hidden" id="img_field" >
          <% if @user.avatar.blank? %>
            <%= image_tag "/assets/profile_icon.png", id: "avatar_img" %>
          <% else %>
            <%= image_tag @user.avatar.url %>
          <% end %>
        </div>
      </div>
      <p class="text-center text-2xl mt-3 mb-6"><%= @user.name %></p>

      <div class="mt-3 mb-6 w-11/12 sm:w-5/6 mx-auto">
        <div class="mb-3">
          <p class="pl-3 py-1"><i class="fas fa-chevron-circle-right text-app mr-1"></i>メールアドレス</p>
          <p class="pl-5 pb-2 border-b border-gray-500"><%= @user.email %></p>
        </div>
        <div class="mb-3">
          <p class="pl-3 py-1"><i class="fas fa-chevron-circle-right text-app mr-1"></i>性別</p>
          <p class="pl-5 pb-2 border-b border-gray-500"><%= @user.sex_i18n %></p>
        </div>
        <div class="mb-3">
          <p class="pl-3 py-1"><i class="fas fa-chevron-circle-right text-app mr-1"></i>誕生日</p>
          <p class="pl-5 pb-2 border-b border-gray-500"><%= @user.birthday %></p>
        </div>
        <div class="mb-3">
          <p class="pl-3 py-1"><i class="fas fa-chevron-circle-right text-app mr-1"></i>職業</p>
          <p class="pl-5 pb-2 border-b border-gray-500"><%= @user.occupation_i18n %></p>
        </div>
      </div>
      <div class="actions mt-6 w-11/12 sm:w-2/3 mx-auto flex justify-center">
        <%= link_to "ユーザー編集", edit_user_registration_path(@user), class: "text-sm bg-green-500 hover:bg-green-700 text-white px-2 py-2 rounded cursor-pointer" %>
      </div>
  </div>
</div>

<%= render "layouts/side_menu_user" %>